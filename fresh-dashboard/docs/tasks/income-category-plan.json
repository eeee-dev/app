{
  "phase_1_database": {
    "description": "Create database tables for income categories",
    "tables": [
      {
        "name": "app_40611b53f9_income_categories",
        "purpose": "Store predefined income categories",
        "columns": [
          "id UUID PRIMARY KEY",
          "name TEXT NOT NULL",
          "description TEXT",
          "default_division TEXT",
          "created_at TIMESTAMP",
          "updated_at TIMESTAMP"
        ]
      },
      {
        "name": "app_40611b53f9_income_breakdowns",
        "purpose": "Store category breakdowns for each income entry",
        "columns": [
          "id UUID PRIMARY KEY",
          "income_id UUID REFERENCES app_40611b53f9_enhanced_income(id)",
          "category_id UUID REFERENCES app_40611b53f9_income_categories(id)",
          "amount DECIMAL NOT NULL",
          "percentage DECIMAL",
          "notes TEXT",
          "created_at TIMESTAMP",
          "updated_at TIMESTAMP"
        ]
      }
    ]
  },
  "phase_2_frontend": {
    "description": "Create UI components for category breakdown",
    "components": [
      "IncomeCategoryManager.tsx - Manage predefined categories",
      "IncomeBreakdownForm.tsx - Add/edit income with category breakdown",
      "CategoryBreakdownChart.tsx - Visualize category distribution",
      "CategoryAllocationTable.tsx - Tabular view of breakdowns"
    ]
  },
  "phase_3_integration": {
    "description": "Integrate with existing income system",
    "tasks": [
      "Update supabase.ts with new API methods",
      "Modify Income.tsx to support category breakdown",
      "Add category breakdown to dashboard stats",
      "Create category-based reports"
    ]
  },
